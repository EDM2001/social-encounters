<div class="viewer" {{#if background}}style="background-image: url('{{background}}');"{{/if}}>
  <button type="button" class="viewer__close" data-action="close" aria-label="{{localize 'SOCIALENCOUNTERS.ViewerClose'}}">&times;</button>
  <div class="viewer__stage">
    {{#if current}}
      <img class="viewer-image" src="{{current}}" alt="">
    {{/if}}
  </div>
  <footer class="viewer__controls">
    <button type="button" class="viewer__btn" data-action="prev" {{#unless hasPrev}}disabled{{/unless}}>{{localize "SOCIALENCOUNTERS.ViewerPrevious"}}</button>
    <span class="viewer__counter">{{index}} / {{total}}</span>
    <button type="button" class="viewer__btn" data-action="next" {{#unless hasNext}}disabled{{/unless}}>{{localize "SOCIALENCOUNTERS.ViewerNext"}}</button>
  </footer>
</div>
